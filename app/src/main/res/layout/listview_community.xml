<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/communityID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:ellipsize="none"
            android:lineSpacingExtra="@dimen/activity_vertical_margin"/>
        <TextView
            android:id="@+id/name_community"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:ellipsize="none"
            android:lineSpacingExtra="@dimen/activity_vertical_margin"/>
        <TextView
            android:id="@+id/location_community"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:ellipsize="none"
            android:lineSpacingExtra="@dimen/activity_vertical_margin"/>
        <TextView
        android:id="@+id/description_community"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:ellipsize="none"
        android:lineSpacingExtra="@dimen/activity_vertical_margin"/>
        <TextView
            android:id="@+id/date_community"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:ellipsize="none"
            android:lineSpacingExtra="@dimen/activity_vertical_margin"/>
    </LinearLayout>
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_add_circle_white_24dp"
        android:onClick="addEvent"/>


</LinearLayout>
